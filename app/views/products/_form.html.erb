      <%#= f.fields_for :addresses do |builder| %>
          <p>
            <%#= builder.text_field :email %>
          </p>
      <%# end %>
    </div>-->
    <div>
     <%= f.fields_for :assets do |asset_fields| %>
        <p>
         <%= asset_fields.file_field :image %>
        </p>
     <% end %>
    </div>



    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
